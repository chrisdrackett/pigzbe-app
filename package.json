{
  "name": "PigzbeApp",
  "version": "1.1.8",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pigzbe/pigzbe-app.git"
  },
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest --verbose",
    "test:watch": "npm test -- --watch",
    "lint": "eslint 'src/**/*.js'; exit 0",
    "desktop": "run-p serve:webpack start:electron",
    "ios": "react-native run-ios",
    "android": "react-native run-android",
    "game": "mkdir -p '.build' && node ./scripts/build-game.js && rm -rf '.build'",
    "game:dev": "GAME_DEV=1 npm run desktop",
    "textures:clear": "rm -rf src/game/assets/images/textures",
    "textures:pack": "node ./scripts/texture-pack.js 'tiled/assets/objects' -o 'src/game/assets/images/textures' -t",
    "textures:copy": "node ./scripts/copy.js 'tiled/assets/{backgrounds,tilesets}/*.{jpg,png}' -o 'src/game/assets/images/textures' -f",
    "textures": "run-s textures:*",
    "content": "node ./scripts/contentful.js",
    "test:update": "jest --updateSnapshot",
    "serve:webpack": "webpack-dev-server -d --config './desktop/webpack.config.js' --hot --colors --host '0.0.0.0' --useLocalIp",
    "start:electron": "wait-on 'http://localhost:8080' && npm run launch:electron",
    "launch:electron": "electron './desktop/main.js'",
    "build:webpack": "webpack -p --config './desktop/webpack.config.js'",
    "postversion": "react-native-version"
  },
  "dependencies": {
    "@pigzbe/react-native-stellar-sdk": "^1.0.2",
    "babel-polyfill": "^6.26.0",
    "moment": "^2.22.1",
    "path": "^0.12.7",
    "pixi.js": "^4.7.3",
    "react": "16.3.1",
    "react-art": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-native": "0.55.3",
    "react-native-image-picker": "^0.26.7",
    "react-native-keychain": "^3.0.0-rc.3",
    "react-native-touch-id": "^4.0.1",
    "react-native-version": "^2.5.2",
    "react-native-web": "^0.6.0",
    "react-navigation": "^1.5.11",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-thunk": "^2.2.0",
    "stellar-sdk": "^0.8.0",
    "url": "^0.11.0",
    "usfl": "^3.2.3",
    "xmldom-qsa": "^1.0.3"
  },
  "devDependencies": {
    "async": "^2.6.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "22.4.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-react-native-web": "^0.6.0",
    "babel-preset-react-native": "4.0.0",
    "electron": "^1.8.4",
    "electron-builder": "^20.10.0",
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.7.0",
    "glob": "^7.1.2",
    "html-webpack-plugin": "^3.2.0",
    "jest": "22.4.3",
    "jest-fetch-mock": "^1.5.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.2",
    "react-test-renderer": "16.3.1",
    "url-loader": "^1.0.1",
    "wait-on": "^2.1.0",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3",
    "yargs": "^11.0.0"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "<rootDir>/src/setupTests.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|react-navigation)/"
    ],
    "globals": {
      "window": true
    }
  },
  "rnpm": {
    "assets": [
      "./assets/fonts/"
    ]
  },
